{% extends "blog/blogBase.html" %}
{% load staticfiles %}
{% block dochead %}
    <link href="{% static "summernote/summernote.css" %}" rel="stylesheet">
    <link href="{% static "summernote/summernote-bs3.css" %}" rel="stylesheet">
    <script src="{% static "summernote/summernote.min.js" %}"></script>
    <script src="{% static "summernote/lang/summernote-zh-CN.js" %}"></script>
    <script src="{% static "summernote/plugin/summernote-ext-video.js" %}"></script>
    <script src="{% static "summernote/plugin/summernote-ext-hello.js" %}"></script>
{% endblock %}
{% block navBar %}
    {% include "blog/widgets/navBar.html" %}
{% endblock %}
{% block mainContent %}
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="lt-from lt-box">
                    <form class="form-horizontal" role="form" method="post" action="about/modify/{{ user.id }}/">
                        {% csrf_token %}
                        <div class="form-group">
                            <label for="id_someWord" class="col-sm-2 control-label">想说的话</label>

                            <div class="col-sm-10">
                                <textarea class="form-control summernote_1" id="id_someWord"
                                          name="someWord">{{ about.someWord|safe }}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="id_aboutEduction" class="col-sm-2 control-label">关于教育</label>

                            <div class="col-sm-10">
                                <textarea class="form-control summernote_2" id="id_aboutEduction"
                                          name="aboutEducation">{{ about.aboutEducation|safe }}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="id_aboutWork" class="col-sm-2 control-label">关于工作</label>

                            <div class="col-sm-10">
                                <textarea class="form-control summernote_3" id="id_aboutWork"
                                          name="aboutWork">{{ about.aboutWork|safe }}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="id_aboutSkill" class="col-sm-2 control-label">关于技能</label>

                            <div class="col-sm-10">
                                <textarea class="form-control summernote_4" id="id_aboutSkill"
                                          name="aboutSkill">{{ about.aboutSkill|safe }}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="id_aboutLive" class="col-sm-2 control-label">关于生活</label>

                            <div class="col-sm-10">
                                <textarea class="form-control summernote_5" id="id_aboutLive"
                                          name="aboutLive">{{ about.aboutLive|safe }}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="id_aboutDream" class="col-sm-2 control-label">关于梦想</label>

                            <div class="col-sm-10">
                                <textarea class="form-control summernote_6" id="id_aboutDream"
                                          name="aboutDream">{{ about.aboutDream|safe }}</textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-offset-2 col-sm-10">
                                <button type="submit" class="btn btn-success">更新</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
