{% load staticfiles %}
{% block dochead %}
    <script type="text/javascript" src="{% static "js/function.js" %}"></script>
{% endblock %}
<nav class="navbar navbar-inverse lite-nav" role="navigation">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Wade、Blog</a>
    </div>
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
        <ul class="nav navbar-nav">
            <li class="{% if  request.path == "/" %}active{% endif %}"><a href="/">Home  <i class="fa fa-home"></i></a></li>
            <li class="{% if  request.path == "/about/" %}active{% endif %}"><a href="/about/">About <i class="fa fa-calendar"></i></a></li>
            {% if  user.is_authenticated %}
                <li class="{% if request.path == "/create/" %}active{% endif %}">
                    <a href="/create/">新建日志<i class="fa fa-edit"></i> </a>
                </li>
            {% endif %}
        </ul>
        <ul class="nav navbar-nav navbar-right">
            {% if not user.is_authenticated %}
                <li><a data-toggle="modal" data-target="#login">Login <i class="fa fa-sign-in"></i> </a></li>
                {% include "blog/include/loginModal.html" %}
            {% endif %}
            {% if  user.is_authenticated %}
                {% include "blog/include/logoutModal.html" %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"> <i class="fa fa-user"></i>{{ user }}<b
                            class="caret"></b></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a data-toggle="modal" data-target="#logout"><i class="fa fa-sign-out"></i> Logout</a></li>
                    </ul>
                </li>
            {% endif %}
        </ul>
    </div>
</nav>
