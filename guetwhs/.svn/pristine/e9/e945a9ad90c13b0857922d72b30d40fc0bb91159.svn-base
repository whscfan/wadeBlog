<form role="form" method="post" id="reply" class="form-horizontal" action="/comment/{{ article.id }}/">
    {% csrf_token %}
    <input type="hidden"  id="id_article"  name="article" class="form-control" value="{{ article.id }}">
{#    <input type="hidden"  id="id_pip"  name="pip" class="form-control" >#}
            <div class="form-group">
                <label class="col-sm-2 control-label" for="id_user">昵称</label>

                <div class="col-sm-10">
                    <input type="text" placeholder="请输入昵称" id="id_user"  name="user" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="id_email">邮箱</label>

                <div class="col-sm-10">
                    <input type="email" placeholder="请输入你的邮箱，这将不会对外公布，我的回复内容将会通过邮箱发送给你" id="id_email" name="email" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="id_content">留言内容</label>

                <div class="col-sm-10">
                    <textarea  id="id_content" name="content" class="form-control"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button class="btn btn-primary" type="submit" onclick=""><i class="fa fa-send"></i> 留言</button>
                </div>
            </div>
        </form>
 <script>
     $(".reply_btn").click(function(){
         var pip = $(this).parents('.media-body').find("input[name='pip']").val();
         var htm = "<input type=\"hidden\"  id=\"id_pip\"  name=\"pip\" class=\"form-control\" "+"value="+pip+" >";
{#         $("#id_pip").val(pip);#}
         $("#replyModal .modal-body > form").append(htm);
         $("#replyModal").modal('show');
     });
     function summitReply(){
         var user = $("#id_user").val();
         if(user=""){
             user = "匿名用户"
         }
         $("#id_user").val(user);
         $("#reply").submit();
     }
    </script>